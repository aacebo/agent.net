{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "description": {
      "type": "string",
      "description": "the agents description",
      "minLength": 10,
      "maxLength": 1000
    },
    "instructions": {
      "type": "string",
      "description": "the agents directive"
    },
    "settings": {
      "type": "object",
      "description": "the agents settings",
      "properties": {
        "model": {
          "type": "string",
          "description": "the model name or url to use"
        }
      },
      "required": ["model"]
    }
  },
  "required": ["description", "settings"]
}
